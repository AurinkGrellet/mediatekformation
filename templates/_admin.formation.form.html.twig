{{ form_start(formformation) }}
<div class="row mt-3">
        <div class="col">
            <div class="row">
                <div class="col">
                    {{ form_row(formformation.title) }}
                    {{ form_row(formformation.videoId) }}
                    {{ form_row(formformation.niveau)}}
                </div>
                <div class="col ml-5">
                    <div class="row">
                        <div class="col">
                            {{ form_row(formformation.miniature) }}
